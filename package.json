{
  "name": "egg-browser-ui",
  "version": "1.0.0",
  "description": "Browser UI for Egg project",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "stop": "bash scripts/stop-server.sh",
    "restart": "npm run stop && npm run dev",
    "build": "mkdir -p dist && cp -R src index.html styles.css script.js server.js package.json package-lock.json dist/"
  },
  "engines": {
    "node": ">=16.x"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  }
}